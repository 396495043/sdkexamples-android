<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eff2f6"
        android:orientation="vertical" >
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@color/top_bar_normal_bg"
            android:gravity="center_vertical" >

            <include layout="@layout/commom_back_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/contactInfo"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:contentDescription="TODO"
                android:src="@drawable/default_avatar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="40dip"
                android:layout_toLeftOf="@id/iv_header"
                android:text="@string/person_avatar"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dip"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/btn_gray_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/sky_text_style"
                    android:layout_alignParentLeft="true"
                    android:text="@string/userName" />

                <TextView
                    android:id="@+id/tv_username"
                    style="@style/sky_text_value_style"
                    android:layout_alignParentRight="true"
                    android:text="SSS" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/btn_gray_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/sky_text_style"
                    android:layout_alignParentLeft="true"
                    android:text="@string/nickName" />

                <TextView
                    android:id="@+id/tv_nickname"
                    style="@style/sky_text_value_style"
                    android:layout_alignParentRight="true"
                    android:text="SSS" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/btn_gray_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/sky_text_style"
                    android:layout_alignParentLeft="true"
                    android:text="@string/email" />

                <TextView
                    android:id="@+id/tv_email"
                    style="@style/sky_text_value_style"
                    android:layout_alignParentRight="true"
                    android:text="SSS" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/btn_gray_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/sky_text_style"
                    android:layout_alignParentLeft="true"
                    android:text="@string/org" />

                <TextView
                    android:id="@+id/tv_org"
                    style="@style/sky_text_value_style"
                    android:layout_alignParentRight="true"
                    android:text="SSS" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/btn_gray_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/sky_text_style"
                    android:layout_alignParentLeft="true"
                    android:text="@string/group" />

                <TextView
                    android:id="@+id/tv_group"
                    style="@style/sky_text_value_style"
                    android:layout_alignParentRight="true"
                    android:text="SSS" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/btn_gray_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/sky_text_style"
                    android:layout_alignParentLeft="true"
                    android:text="@string/workPhone" />

                <TextView
                    android:id="@+id/tv_workPhone"
                    style="@style/sky_text_value_style"
                    android:autoLink="phone"
                    android:layout_alignParentRight="true"
                    android:text="SSS" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/btn_gray_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/sky_text_style"
                    android:layout_alignParentLeft="true"
                    android:text="@string/phone" />

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/sky_text_value_style"
                    android:layout_alignParentRight="true"
                    android:autoLink="phone"
                    android:text="SSS" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/btn_gray_normal" />
            


            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/btn_gray_normal" />
            
           <TextView
                    android:id="@+id/tv_pmr_meeting" 
                    style="@style/sky_text_style"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                	android:layout_marginRight="10dp"
                    android:text="" />
                
            <Button
                   android:id="@+id/btn_pmr_meeting"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    style="@style/sky_button"
                    android:layout_marginLeft="50dp"
                	android:layout_marginRight="50dp"
                    android:text="@string/other_pmr_meeting" />
            
             <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/btn_gray_normal" />
           
        </LinearLayout>
    </LinearLayout>
</ScrollView>