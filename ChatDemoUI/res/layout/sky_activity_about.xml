<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eff2f6"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@color/top_bar_normal_bg"
            android:gravity="center_vertical" >

            <include layout="@layout/commom_back_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/about"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:src="@drawable/welcom_logo" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_about"
                style="@style/sky_text_value_style"
  				android:layout_gravity="center"
                android:text="科天云通讯" />
            


            <TextView
                android:id="@+id/tv_version"
                style="@style/sky_text_value_style"
                android:layout_gravity="center"
                android:text="版本    " />
            
             <TextView
                style="@style/sky_text_value_style"
                android:layout_gravity="center"
                android:autoLink="web"
                android:text="科天网站  http://www.ketianyun.com/" />
             
             <TextView
               android:id="@+id/tv_contact"
               style="@style/sky_text_value_style"
               android:autoLink="all"
               android:text="有问题,您可以联系zhongqi.chen@tcl.com，电话  13382413897,也可以直接用科天云通讯联系，邮箱即帐号。\n还可以在有道系统上报bug\n http://10.10.10.10/zentao/" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>